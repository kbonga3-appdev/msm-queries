<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor_id.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor_id.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor_id.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @actor_id.name%>?set=set7">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words (@actor_id.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words (@actor_id.updated_at) %> ago
  </dd>
</dl>

<hr>

