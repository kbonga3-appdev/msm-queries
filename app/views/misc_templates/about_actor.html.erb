      <tr>
      <td>                
      <%= movie.title %>
      <%#= @list_of_movies %>
      </td>

      <td>
        <%= movie.year  %>
      </td>
      <td>
    
 <%  dir=Director.where(:id=>movie.director_id).first  %>

     <%= dir.name %>
         
      </td>

      <td>
      <%= char.name  %>
        
      </td>

      <td>
        <a href="/movies/<%= char.movie_id %>">
          Show details
        </a>
      </td>
    </tr>
     <%#else %>
     <% end %>
<% end %>
</table>

